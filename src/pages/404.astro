---
// src/pages/404.astro - Minimal Nikola Style 404 Page
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout 
  title="404 - Page Not Found | Nate Whoms" 
  description="The page you're looking for doesn't exist."
>
  <Navigation />
  
  <main id="main" class="min-h-[70vh] flex items-center py-32">
    <div class="section-container w-full">
      <div class="max-w-4xl">
        <!-- 404 Number - Large and Bold -->
        <div class="mb-8">
          <span class="text-9xl md:text-[12rem] font-bold leading-none text-gray-200 dark:text-gray-800">
            404
          </span>
        </div>

        <!-- Error Message -->
        <h1 class="text-4xl md:text-6xl font-bold mb-6">
          Page not found
        </h1>
        
        <p class="text-xl md:text-2xl text-gray-600 dark:text-gray-400 mb-12 max-w-2xl">
          The page you're looking for doesn't exist or has been moved.
        </p>

        <!-- Navigation Links -->
        <div class="flex flex-col sm:flex-row gap-8">
          <a href="/" class="group inline-flex items-center gap-3 text-lg hover:text-primary transition-colors">
            <span class="border-b-2 border-current">Go home</span>
            <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
          
          <a href="/projects" class="group inline-flex items-center gap-3 text-lg text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors">
            <span class="border-b-2 border-transparent group-hover:border-current">View projects</span>
            <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>

          <a href="/contact" class="group inline-flex items-center gap-3 text-lg text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors">
            <span class="border-b-2 border-transparent group-hover:border-current">Contact me</span>
            <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
        </div>
      </div>
    </div>
  </main>

  <Footer />
</BaseLayout>

