---
// src/components/ProjectCard.astro - Minimal Nikola Style
export interface Props {
  title: string;
  description: string;
  image: string;
  tags: string[];
  slug: string;
  featured?: boolean;
}

const { title, description, image, tags, slug, featured = false } = Astro.props;
---

<article class="group">
  <a href={`/projects/${slug}`} class="block">
    <!-- Project Image -->
    <div class="relative overflow-hidden aspect-[16/10] mb-6 bg-gray-100 dark:bg-gray-800">
      <img
        src={image}
        alt={title}
        class="w-full h-full object-cover transition-transform duration-700 ease-out group-hover:scale-105"
        loading="lazy"
      />
      {featured && (
        <div class="absolute top-4 right-4 bg-white dark:bg-gray-900 text-xs font-medium px-3 py-1 uppercase tracking-wide">
          Featured
        </div>
      )}
    </div>

    <!-- Project Info -->
    <div class="space-y-4">
      <h3 class="text-2xl md:text-3xl font-bold group-hover:text-primary transition-colors">
        {title}
      </h3>
      
      <p class="text-gray-600 dark:text-gray-400 leading-relaxed">
        {description}
      </p>

      <!-- Tags -->
      <div class="flex flex-wrap gap-2">
        {tags.slice(0, 3).map((tag) => (
          <span class="text-xs uppercase tracking-wide text-gray-500 dark:text-gray-500">
            {tag}
          </span>
        ))}
        {tags.length > 3 && (
          <span class="text-xs uppercase tracking-wide text-gray-500 dark:text-gray-500">
            +{tags.length - 3} more
          </span>
        )}
      </div>

      <!-- View Link with Arrow -->
      <div class="inline-flex items-center gap-2 text-sm uppercase tracking-wide group-hover:gap-3 transition-all">
        <span>View Project</span>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </div>
    </div>
  </a>
</article>
