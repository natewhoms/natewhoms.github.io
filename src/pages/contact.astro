---
// src/pages/contact.astro - Minimal Nikola Style
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import { siteConfig } from '../config';
---

<BaseLayout 
  title="Contact | Nate Whoms" 
  description="Get in touch to discuss your project or just say hello."
>
  <Navigation />
  
  <main id="main" class="py-32">
    <div class="section-container">
      <div class="max-w-4xl">
        <!-- Page Header -->
        <div class="mb-20">
          <span class="text-sm uppercase tracking-wide text-gray-500 dark:text-gray-500">Get in Touch</span>
          <h1 class="text-4xl md:text-6xl lg:text-7xl font-bold mt-4 mb-8">
            Let's work together
          </h1>
          <p class="text-xl md:text-2xl text-gray-600 dark:text-gray-400 max-w-2xl">
            Have a project in mind? I'm always interested in hearing about new opportunities and collaborations.
          </p>
        </div>

        <div class="grid lg:grid-cols-5 gap-16">
          <!-- Contact Info -->
          <div class="lg:col-span-2 space-y-12">
            <!-- Email -->
            <div>
              <h3 class="text-sm uppercase tracking-wide font-medium mb-4">Email</h3>
              <a href={siteConfig.socials.email.url} class="text-xl hover:text-primary transition-colors">
                {siteConfig.author.email}
              </a>
            </div>

            <!-- Location -->
            <div>
              <h3 class="text-sm uppercase tracking-wide font-medium mb-4">Location</h3>
              <p class="text-xl text-gray-600 dark:text-gray-400">
                {siteConfig.author.location}
              </p>
            </div>

            <!-- Social Links -->
            <div>
              <h3 class="text-sm uppercase tracking-wide font-medium mb-4">Social</h3>
              <div class="space-y-3">
                {Object.entries(siteConfig.socials).map(([key, social]) => (
                  key !== 'email' && (
                    <div>
                      <a
                        href={social.url}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors inline-block"
                      >
                        {social.name}
                      </a>
                    </div>
                  )
                ))}
              </div>
            </div>
          </div>

          <!-- Contact Form -->
          <div class="lg:col-span-3">
            <form action="https://formspree.io/f/YOUR_FORM_ID" method="POST" class="space-y-8">
              <!-- Name -->
              <div>
                <label for="name" class="block text-sm uppercase tracking-wide font-medium mb-4">
                  Name *
                </label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  required
                  class="w-full bg-transparent border-b-2 border-gray-300 dark:border-gray-700 px-0 py-3 focus:border-primary focus:outline-none transition-colors"
                  placeholder="Your name"
                />
              </div>

              <!-- Email -->
              <div>
                <label for="email" class="block text-sm uppercase tracking-wide font-medium mb-4">
                  Email *
                </label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  required
                  class="w-full bg-transparent border-b-2 border-gray-300 dark:border-gray-700 px-0 py-3 focus:border-primary focus:outline-none transition-colors"
                  placeholder="your@email.com"
                />
              </div>

              <!-- Subject -->
              <div>
                <label for="subject" class="block text-sm uppercase tracking-wide font-medium mb-4">
                  Subject *
                </label>
                <input
                  type="text"
                  id="subject"
                  name="subject"
                  required
                  class="w-full bg-transparent border-b-2 border-gray-300 dark:border-gray-700 px-0 py-3 focus:border-primary focus:outline-none transition-colors"
                  placeholder="Project inquiry"
                />
              </div>

              <!-- Message -->
              <div>
                <label for="message" class="block text-sm uppercase tracking-wide font-medium mb-4">
                  Message *
                </label>
                <textarea
                  id="message"
                  name="message"
                  required
                  rows="6"
                  class="w-full bg-transparent border-b-2 border-gray-300 dark:border-gray-700 px-0 py-3 focus:border-primary focus:outline-none transition-colors resize-none"
                  placeholder="Tell me about your project..."
                ></textarea>
              </div>

              <!-- Submit Button -->
              <div class="pt-8">
                <button
                  type="submit"
                  class="group inline-flex items-center gap-3 text-lg hover:text-primary transition-colors"
                >
                  <span class="border-b-2 border-current">Send message</span>
                  <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                  </svg>
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </main>

  <Footer />
</BaseLayout>
