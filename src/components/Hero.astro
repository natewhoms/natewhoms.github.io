---
// src/components/Hero.astro - Minimal Nikola Style
import { siteConfig } from '../config';
---

<section class="min-h-[80vh] flex items-center py-20 md:py-32">
  <div class="section-container">
    <div class="max-w-5xl">
      <!-- Availability Badge -->
      <div class="inline-block mb-8 animate-fade-in">
        <span class="text-sm tracking-wide text-gray-500 dark:text-gray-400 uppercase">
          {siteConfig.author.availability}
        </span>
      </div>
      
      <!-- Main Headline - Extra Large -->
      <h1 class="text-5xl md:text-7xl lg:text-8xl font-bold mb-8 leading-tight animate-fade-in" style="animation-delay: 0.1s;">
        {siteConfig.author.name}
      </h1>
      
      <!-- Role/Subtitle -->
      <p class="text-2xl md:text-4xl text-gray-600 dark:text-gray-400 mb-12 font-light animate-fade-in" style="animation-delay: 0.2s;">
        {siteConfig.author.role}
      </p>
      
      <!-- Bio -->
      <p class="text-lg md:text-xl text-gray-600 dark:text-gray-400 mb-12 max-w-2xl leading-relaxed animate-fade-in" style="animation-delay: 0.3s;">
        {siteConfig.author.bio}
      </p>
      
      <!-- CTA Links - Minimal Style -->
      <div class="flex flex-col sm:flex-row gap-8 animate-fade-in" style="animation-delay: 0.4s;">
        <a href="/projects" class="group inline-flex items-center text-lg hover:text-primary transition-colors">
          <span class="border-b-2 border-current">View my work</span>
          <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
        
        <a href="/contact" class="group inline-flex items-center text-lg text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors">
          <span class="border-b-2 border-transparent group-hover:border-current">Get in touch</span>
          <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
      </div>
    </div>
  </div>
</section>
